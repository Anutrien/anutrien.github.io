@import "./_html5_clean_up"
@import "./_helpers"
@import "./_flex"
@import "./_vars"
@import "./_form"

body, html, #root
  color $text-color-default
  background-color $bg-color-default
  font-size 1em
  font-family 'Work Sans', sans-serif
  line-height 1.4
  height 100%
  width 100%

@media all and (max-width: medium-screen)
  html
    font-size 10px

a
  text-decoration none
  color #FFF
  transition color .3s ease-out

  &:hover
    color #000

h1, h2, h3, small
  text-transform uppercase
  letter-spacing 7px

section, article, .article-wrapper
  height 100%
  width 100%

  @media (max-width: medium-screen)
    height initial !important

article:not(:first-child)
  display flex
  justify-content center
  flex-wrap wrap

  h1
    flex 0 1 100%
    max-width 80%

  .text-center
    text-align center

  .text-right
    text-align right

  .text-left
    text-align left

  .padding-top
    padding-top 45px

  .padding-right
    padding-right 20px

  .padding-left
    padding-left 20px

  .padding
    padding 15px

    @media (max-width: medium-screen)
      padding 5px

.items-container
  padding 20px
  width 100%
  display: flex
  flex-direction row
  flex-wrap no-wrap
  justify-content space-around

  .item-50
    width 50%
    flex 1

