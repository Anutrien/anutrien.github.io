#services
  color #fff
  background-color #527b00 //'#efeff2'

  h1
    margin 0
    padding 20px

#services
  .flex-grid

     @media (max-width: medium-screen)
      margin-top 0

  .flex-grid-item
    display flex
    flex-direction column
    align-items center
    font-size 1rem
    margin 20px
    max-width 25%

    @media (max-width: medium-screen)
      max-width none
      margin 0

  .service
    height 300px
    background-size 80% auto
    background-repeat no-repeat
    background-position center

    @media (max-width: medium-screen)
      background-size 35% auto
      height 60px

  i
    font-size 8rem

  p
    font-weight 300
    font-size 18px